{
    "version": "0.0.4",
    "name": "ids-chrome-extension",
    "background": {
        "matches": [
            "https://itdirect.wdf.sap.corp/*",
            "https://accounts.sap.com/*",
            "https://accounts400.sap.com/*"
        ],
        "scripts": ["background.bundle.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "https://itdirect.wdf.sap.corp/*",
                "https://accounts.sap.com/*",
                "https://accounts400.sap.com/*"
            ],
            "js": ["contentScript.bundle.js"],
            "all_frames": true
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}

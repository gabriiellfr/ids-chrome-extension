{
    "version": "0.0.2",
    "name": "ids-chrome-extension",
    "background": {
        "matches": ["http://*/*", "https://*/*"],
        "scripts": [
            "js/plugins/jquery.min.js",
            "js/plugins/axios.min.js",
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": [
                "js/plugins/jquery.min.js",
                "js/plugins/axios.min.js",
                "js/contentScript.js"
            ],
            "all_frames": true
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
